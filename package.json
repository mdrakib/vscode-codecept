{
	"name": "vscode-codecept",
	"displayName": "vscode-codecept",
	"description": "Codecept test runner",
	"version": "1.0.7",
	"publisher": "Rakib",
	"repository": {
		"type": "git",
		"url": "https://github.com/mdrakib/vscode-codecept"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codeceptrunner.runTestScenarioInDefaultBrowser",
				"title": "Codecept: Run Scenario in Default Browser"
			},
			{
				"command": "codeceptrunner.runTestScenarioInChrome",
				"title": "Codecept: Run Scenario in Chrome"
			},
			{
				"command": "codeceptrunner.runTestScenarioInIE",
				"title": "Codecept: Run Scenario in IE"
			}
		],
		"keybindings": [
			{
				"command": "codeceptrunner.runTestScenarioInDefaultBrowser",
				"key": "CTRL+Alt+D",
				"mac": "CMD+Alt+D"
			},
			{
				"command": "codeceptrunner.runTestScenarioInChrome",
				"key": "CTRL+Alt+C",
				"mac": "CMD+Alt+C"
			},
			{
				"command": "codeceptrunner.runTestScenarioInIE",
				"key": "CTRL+Alt+I",
				"when": "isWindows"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "codeceptrunner.runTestScenarioInDefaultBrowser",
					"group": "codeceptrunner"
				},
				{
					"command": "codeceptrunner.runTestScenarioInChrome",
					"group": "codeceptrunner"
				},
				{
					"command": "codeceptrunner.runTestScenarioInIE",
					"group": "codeceptrunner",
					"when": "isWindows"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^8.4.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}
